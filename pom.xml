<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.github.baloise</groupId>
	<artifactId>rocket-chat-rest-client</artifactId>
	<version>0.1.3-SNAPSHOT</version>
	<properties>
		<jackson.version>2.10.0.pr1</jackson.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.mashape.unirest</groupId>
			<artifactId>unirest-java</artifactId>
			<version>1.4.8</version>
		</dependency>

		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>${jackson.version}</version>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.13.1</version>
		</dependency>

		<dependency>
			<groupId>com.vdurmont</groupId>
			<artifactId>emoji-java</artifactId>
			<version>3.1.3</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- Compile plugin -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>io.fabric8</groupId>
				<artifactId>docker-maven-plugin</artifactId>
				<version>0.36.0</version>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>prepare-rocketchat</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>build</goal>
							<goal>start</goal>
						</goals>
						<configuration>
							<autoCreateCustomNetworks>true</autoCreateCustomNetworks>
							<images>
								<image>
									<name>rocketchat/rocket.chat:latest</name>
									<alias>rocketchat</alias>
									<run>
										<log>
											<enabled>false</enabled>
										</log>
										<network>
											<name>backend</name>
											<alias>rocketchat</alias>
										</network>
										<dependsOn>
											<container>mongo</container>
										</dependsOn>
										<env>
											<API_Enable_Rate_Limiter>false</API_Enable_Rate_Limiter>
											<MONGO_URL>mongodb://mongo:27017/rocketchat</MONGO_URL>
											<MONGO_OPLOG_URL>mongodb://mongo:27017/local</MONGO_OPLOG_URL>
    										<Log_Level>2</Log_Level>
    										<ADMIN_USERNAME>admin</ADMIN_USERNAME>
 											<ADMIN_PASS>supersecret</ADMIN_PASS>
 											<ADMIN_EMAIL>admin@example.com</ADMIN_EMAIL>
										</env>
										<wait>
											<http>
												<url>http://localhost:23737</url>
											</http>
											<time>60000</time>
										</wait>
										<ports>
											<port>23737:3000</port>
										</ports>
									</run>

								</image>

								<image>
									<name>mongo:3.6</name>
									<alias>mongo</alias>
									<run>
										<log>
											<enabled>false</enabled>
										</log>
										<wait>
											<log>waiting for connections on port 27017</log>
											<time>20000</time>
										</wait>
										<cmd>mongod --smallfiles --oplogSize 128 --replSet rs0</cmd>
										<network>
											<name>backend</name>
											<alias>mongo</alias>
										</network>
									</run>
								</image>

								<image>
									<name>mongo:3.6</name>
									<alias>mongo-init-replica</alias>
									<run>
										<log>
											<enabled>false</enabled>
										</log>
										<cmd>
											<arg>mongo</arg>
											<arg>mongo/rocketchat</arg>
											<arg>--eval</arg>
											<arg>rs.initiate({ _id:'rs0', members: [ { _id: 0, host:
												'localhost:27017' }]})</arg>
										</cmd>
										<network>
											<name>backend</name>
											<alias>mongo-init-replica</alias>
										</network>
									</run>
								</image>

							</images>
						</configuration>
					</execution>
					<execution>
						<id>remove-rocketchat</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.19.1</version>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<trimStackTrace>false</trimStackTrace>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>releases</id>
			<name>user release resp</name>
			<url>http://192.168.10.150:8088/repository/maven-releases/</url>
		</repository>

		<snapshotRepository>
			<id>Snapshots</id>
			<url>http://192.168.10.150:8088/repository/maven-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
</project>
